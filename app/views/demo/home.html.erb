    <section id="demo" class="mini-content row">
        <h1 class="center">How it works</h1>

        <section data-num="1" class="full col">
            <div class="box">
                <h3>Register an account</h3>
                <form id="register-form" action="/api/users" method="post" class="blingpass-form">
                    <input placeholder="Username" name="username" type="text">
                    <input placeholder="Password" name="password" type="text" class="blingpass-password" autocomplete="off">
                    <button type="submit">Submit</button>
                    <div class="error">No errors.</div>
                </form>
            </div>
        </section>

        <section data-num="2" class="full col">
            <div class="box">
                <h3>Log in with BlingPass authentication.</h3>
                <form id="login-form" action="/api/users/login" method="post" class="blingpass-form">
                    <input placeholder="Username" name="username" type="text">
                    <input placeholder="Password" name="password" type="text" class="blingpass-password" autocomplete="off">
                    <button type="submit">Submit</button>
                    <div class="error">No errors.</div>
                </form>
            </div>
        </section>
    </section>

    <section id="how-to-use-it" class="content row">
        <h1 class="center">How to use it</h1>
        <p>
            Simple API. Just add the following lines to your front-end and server.
        </p>
        <div class="half col">
            <h2>Client</h2>
            <div class="code" data-type="javascript">
                hello world
            </div>
        </div>
        <div class="half col">
            <h2>Server</h2>
            <div class="code" data-type="rails">
                require 'blingpass'

                def create
                    BlingPass.api_key = ENV['BLINGPASS_APIKEY']
                    BlingPass.create_user({
                        username: params[:username],
                        signature: {
                            params[:holds]
                            params[:flights]
                        }
                    })
                end

                def login
                    BlingPass.api_key = ENV['BLINGPASS_APIKEY']
                    BlingPass.verify_user({
                        username: params[:username],
                        signature: {
                            params[:holds]
                            params[:flights]
                        }
                    })
                end
            </div>
        </div>
    </section>

